# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
RESEND_API_KEY=your_resend_api_key

# Payment Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# JWT Configuration (RS256 - Recommended)
# Generate keys using: tsx scripts/generate-jwt-keys.ts
# Or use legacy HS256 with JWT_SECRET (not recommended for production)
JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
...your private key here...
-----END PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
...your public key here...
-----END PUBLIC KEY-----

# Legacy JWT Configuration (HS256 - Deprecated)
# JWT_SECRET=your_jwt_secret_key (only for backward compatibility)

# Database Configuration
DATABASE_URL=your_database_url

# API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key
YELP_API_KEY=your_yelp_api_key
FOURSQUARE_API_KEY=your_foursquare_api_key

# Application Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000
